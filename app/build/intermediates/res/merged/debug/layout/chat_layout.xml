<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:windowSoftInputMode="adjustPan"
    tools:context="hu.szoftarch.hf.gpschat.fragments.ChatFragment">

    <TextView
        android:id="@+id/test_textview"
        android:text="Ez itten egy test textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"/>
    <ListView
        android:id="@android:id/list"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_below="@id/test_textview"
        android:transcriptMode="alwaysScroll"
        android:layout_above="@+id/msg_box"
        android:stackFromBottom="true" />


    <LinearLayout
        android:id="@+id/msg_box"
        android:layout_below="@id/msg_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <EditText
            android:id="@+id/message_et"
            android:hint="Küldjé üzenet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginLeft ="5dp"
            android:layout_marginEnd  ="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="4"/>

        <Button
            android:id="@+id/send_message"
            android:text="send"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

    </LinearLayout>

</RelativeLayout>
